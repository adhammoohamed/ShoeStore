<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="shoe"
            type="com.udacity.shoestore.screens.details.SharedViewModel" />
    </data>
    <!--  Card view to add the views in an organized way  -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="@color/orange2"
        android:padding="16dp"
        android:id="@+id/card_view">

        <!-- to hold the textViews in vertically way -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shoe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name : "
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:gravity="center" />

            <TextView
                android:id="@+id/description"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="description : "
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/brand_text_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:text="brand : "
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/size_text_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="size : "
                android:textSize="18sp"
                android:textStyle="italic|bold"
                android:textColor="@color/black" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>
</layout>